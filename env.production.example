# Production Environment Variables
# Copy this to .env.local on your VPS and update the values

# Application
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://catchtheevent.com
NEXT_PUBLIC_APP_NAME="Catch The Event"

# Database (Supabase)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Stripe Payment Processing
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# Email Service (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@catchtheevent.com
SENDGRID_FROM_NAME="Catch The Event"

# Security
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=https://catchtheevent.com

# Admin
ADMIN_EMAIL=admin@catchtheevent.com
ADMIN_PASSWORD=your_secure_admin_password_here

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=your_google_analytics_id_here
FACEBOOK_PIXEL_ID=your_facebook_pixel_id_here

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# Logging
LOG_LEVEL=info
